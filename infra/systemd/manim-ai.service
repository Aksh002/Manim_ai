[Unit]
Description=Manim AI Platform
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/manim-ai
ExecStart=/usr/bin/docker compose -f docker-compose.yml -f infra/compose/compose.prod.yml up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
